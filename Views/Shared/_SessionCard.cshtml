@model Cinema.Entities.Session

<div class="card mb-3 bg-dark text-light shadow-lg">
    <div class="card-header">
        <h5 class="card-title">@Model.Movie?.Title</h5>
    </div>
    <div class="card-body">
        <p class="card-text"><strong>Start Time:</strong> @Model.StartTime</p>
        <p class="card-text"><strong>Duration:</strong> @Model.Movie?.Duration min</p>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <div>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm me-1">
                <i class="bi bi-info-circle-fill"></i> Details
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm me-1">
                <i class="bi bi-pencil-fill"></i> Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm me-1">
                <i class="bi bi-trash-fill"></i> Delete
            </a>
        </div>
    </div>
</div>