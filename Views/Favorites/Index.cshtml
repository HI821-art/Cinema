@using Cinema.Entities
@model IEnumerable<Movie>

<h1>Favorite Movies</h1>

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3" style="width: 18rem;">
                <img src="@movie.CoverImage" height="250" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <a asp-controller="Favorites" asp-action="Details"
                       asp-route-id="@movie.Id"
                       asp-route-returnUrl="@Context.Request.Path">
                        <h5 class="card-title">@movie.Title</h5>
                    </a>
                    <p class="card-text">
                        <div>Year: @movie.Year</div>
                        <div>Country: @movie.Country</div>
                    </p>
                    <a asp-controller="Favorites" asp-action="Add"
                       asp-route-id="@movie.Id"
                       asp-route-returnUrl="@Context.Request.Path"
                       class="btn btn-success">Add to Favorites</a>
                    <a asp-controller="Favorites" asp-action="Remove"
                       asp-route-id="@movie.Id"
                       asp-route-returnUrl="@Context.Request.Path"
                       class="btn btn-danger">Remove from Favorites</a>
                </div>
            </div>
        </div>
    }
</div>