@model IEnumerable<CINEMA.Entitties.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies Admin Page</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Movie</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col" style="width: 5%">#</th>
                <th scope="col" style="width: 10%">Image</th>
                <th scope="col" style="width: 15%">Title</th>
                <th scope="col" style="width: 10%">Country</th>
                <th scope="col" style="width: 10%">Year</th>
                <th scope="col" style="width: 20%">Description</th>
                <th scope="col" style="width: 10%">Genre</th>
                <th scope="col" style="width: 10%">Duration</th>
                <th scope="col" style="width: 10%">Trailer</th>
                <th scope="col" style="width: 10%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <th scope="row">@item.Id</th>
                    <td class="text-center">
                        <img height="40" src="@item.CoverImage" alt="@item.Title" />
                    </td>
                    <td>@item.Title</td>
                    <td>
                        <span class="badge bg-primary">@item.Country</span>
                    </td>
                    <td>@item.Year.ToString()</td>
                    <td>@item.Description</td>
                    <td>@item.Genre</td>
                    <td>@item.Duration min</td>
                    <td>
                        <a href="@item.TrailerUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-camera-reels-fill"></i>
                        </a>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-info-square-fill"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}