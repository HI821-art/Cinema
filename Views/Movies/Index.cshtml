@using CINEMA.Entitties
@model List<Movies>

<h1>Movies Admin Page</h1>

<p>
    <button type="button" class="btn btn-primary">Create New Player</button>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col" style="width: 5%">#</th>
                <th scope="col" style="width: 10%">Image</th>
                <th scope="col" style="width: 15%">Title</th>
                <th scope="col" style="width: 10%">Country</th>
                <th scope="col" style="width: 10%">Year</th>
                <th scope="col" style="width: 20%">Description</th>
                <th scope="col" style="width: 10%">Genre</th>
                <th scope="col" style="width: 10%">Duration</th>
                <th scope="col" style="width: 10%">Trailer</th>
                <th scope="col" style="width: 10%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr class="align-middle">
                    <th scope="row">@i.Id</th>
                    <td class="text-center">
                        <img height="40" src="@i.CoverImage" alt="@i.Title" />
                    </td>
                    <td>@i.Title</td>
                    <td>
                        <span class="badge bg-primary">@i.Country</span>
                    </td>
                    <td>@i.Year.ToString()</td>
                    <td>@i.Description</td>
                    <td>@i.Genre</td>
                    <td>@i.Duration min</td>
                    <td>
                        <a href="@i.TrailerUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-camera-reels-fill"></i>
                        </a>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-info-square-fill"></i>
                            </button>
                            <button type="button" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <a asp-action="Delete" asp-route-id="@i.Id" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>