@model IEnumerable<CINEMA.Entitties.Session>

@{
    ViewData["Title"] = "Sessions Admin Page";
}

<h1>Sessions Admin Page</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Session</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Start Time</th>
                <th scope="col">Duration</th>
                <th scope="col">Movie</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in Model)
            {
                <tr>
                    <td>@session.StartTime</td>
                    <td>@session.Movie.Duration min</td>
                    <td>@session.Movie.Title</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-info-square-fill"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>